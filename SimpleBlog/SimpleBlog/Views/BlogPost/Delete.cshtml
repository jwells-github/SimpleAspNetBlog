@model BlogPost
@{ Layout = "_Layout";}


<form method="post">
    <div class="form-group">
        <label asp-for="Title"></label>
        <input disabled class="form-control" asp-for="Title" />
    </div>
    <div class="form-group">
        <label asp-for="Content"></label>
        <input disabled class="form-control" asp-for="Content" />
    </div>
    <input type="hidden" asp-for="PostedDate" value="@Model.PostedDate" />
    <button class="btn btn-danger" type="submit">Delete</button>
</form>