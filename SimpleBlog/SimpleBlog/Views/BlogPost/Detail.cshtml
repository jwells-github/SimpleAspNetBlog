@model BlogPost
@{ 
    ViewData["Title"] = "Home Page";
}


<div>
   <h1>@Model.Title</h1>
   <h2>@Model.PostedDate</h2>   
   <p>@Model.Content</p>
</div>
<a asp-action="Edit" asp-route-id="@Model.BlogPostID"
   class="btn btn-sm btn-primary">Edit</a>
<a asp-action="Delete" asp-route-id="@Model.BlogPostID"
   class="btn btn-sm btn-danger">Delete</a>